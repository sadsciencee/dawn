{%- liquid
    assign collect_logs = section.settings.collect_logs
    capture offers
        render 'offers', collect_logs: collect_logs
    endcapture
-%}

<div class="page-width">
  {% if collect_logs %}
    {% render 'display-log-lines', source: offers, index: 2 %}
    {% assign split = offers | split: '::' %}
    {% assign offers = split[0] | append: '::' | append: split[1] %}
  {% endif %}
  {{ offers }}
</div>

{% schema %}
{
  "name": "Test Section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "collect_logs",
      "label": "Enable Log Collection",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Test Section"
    }
  ]
}
{% endschema %}
