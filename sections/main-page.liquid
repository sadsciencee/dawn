{%- liquid
	capture spacing
		render 'ucoast-spacing', settings: section.settings
	endcapture
	capture color_scheme
		render 'ucoast-scheme-classes', color_scheme: section.settings.color_scheme
	endcapture
	if section.index > 2
		assign loading = 'lazy'
	else
		assign loading = 'eager'
	endif
-%}

<div class="page-width page-width--narrow {{ spacing }}">
	<h1 class="main-page-title page-title h0{% render 'ucoast-animate', animation: 'fade-in' %}">
		{{ page.title | escape }}
	</h1>
	<div class="rte{% render 'ucoast-animate', animation: 'slide-in' %}">
		{{ page.content }}
	</div>
</div>

{% schema %}
	{
		"name": "t:sections.main-page.name",
		"tag": "section",
		"class": "section",
		"settings": [
			{
				"type": "color_scheme",
				"id": "color_scheme",
				"label": "t:sections.all.colors.label",
				"default": "background-1"
			},
			{
				"type": "header",
				"content": "t:sections.all.spacing"
			},
			{
				"type": "range",
				"id": "space_above",
				"label": "Space Above",
				"info": "Set to -1 to disable space above",
				"min": 0,
				"max": 10,
				"default": 4,
				"unit": "spc",
				"step": 1
			},
			{
				"type": "range",
				"id": "mobile_space_above",
				"label": "Mobile Space Above",
				"min": -1,
				"max": 10,
				"step": 1,
				"default": -1,
				"info": "Leave as '-1' to use the same value as the desktop setting."
			}
		]
	}
{% endschema %}
