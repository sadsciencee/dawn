{%- liquid
	capture spacing
		render 'ucoast-spacing', settings: section.settings
	endcapture
	if section.index > 2
		assign loading = 'lazy'
	else
		assign loading = 'eager'
	endif
	capture color_scheme
		render 'ucoast-scheme-classes', color_scheme: section.settings.color_scheme
	endcapture
-%}

<div class="{{ color_scheme }} gradient {{ spacing }}">
	<div class="section-{{ section.id }}-padding">
		{{ section.settings.custom_liquid }}
	</div>
</div>

{% schema %}
	{
		"name": "t:sections.custom-liquid.name",
		"tag": "section",
		"class": "section",
		"settings": [
			{
				"type": "liquid",
				"id": "custom_liquid",
				"label": "t:sections.custom-liquid.settings.custom_liquid.label",
				"info": "t:sections.custom-liquid.settings.custom_liquid.info"
			},
			{
				"type": "color_scheme",
				"id": "color_scheme",
				"label": "t:sections.all.colors.label",
				"default": "background-1"
			},
			{
				"type": "header",
				"content": "t:sections.all.spacing"
			},
			{
				"type": "range",
				"id": "space_above",
				"label": "Space Above",
				"info": "Set to -1 to disable space above",
				"min": 0,
				"max": 10,
				"default": 4,
				"unit": "spc",
				"step": 1
			},
			{
				"type": "range",
				"id": "mobile_space_above",
				"label": "Mobile Space Above",
				"min": -1,
				"max": 10,
				"step": 1,
				"default": -1,
				"info": "Leave as '-1' to use the same value as the desktop setting."
			}
		],
		"presets": [
			{
				"name": "t:sections.custom-liquid.presets.name"
			}
		]
	}
{% endschema %}
