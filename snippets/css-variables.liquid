{%- liquid
    assign body_font_bold = settings.type_body_font | font_modify: 'weight', 'bold'
    assign body_font_italic = settings.type_body_font | font_modify: 'style', 'italic'
    assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'
%}

{% style %}
    {{ settings.type_body_font | font_face: font_display: 'swap' }}
    {{ body_font_bold | font_face: font_display: 'swap' }}
    {{ body_font_italic | font_face: font_display: 'swap' }}
    {{ body_font_bold_italic | font_face: font_display: 'swap' }}
    {{ settings.type_header_font | font_face: font_display: 'swap' }}

    {% for scheme in settings.color_schemes -%}
        {% assign scheme_classes = scheme_classes | append: ', .color-' | append: scheme.id %}
        {% if forloop.index == 1 -%}
            :root,
        {%- endif %}
        .color-{{ scheme.id }} {
        --c-background: {{ scheme.settings.background.red }},{{ scheme.settings.background.green }},{{ scheme.settings.background.blue }};
        {% if scheme.settings.background_gradient != empty %}
            --gradient-background: {{ scheme.settings.background_gradient }};
        {% else %}
            --gradient-background: {{ scheme.settings.background }};
        {% endif %}
        --c-foreground: {{ scheme.settings.text.red }},{{ scheme.settings.text.green }},{{ scheme.settings.text.blue }};
        --c-shadow: {{ scheme.settings.shadow.red }},{{ scheme.settings.shadow.green }},{{ scheme.settings.shadow.blue }};
        --c-button: {{ scheme.settings.button.red }},{{ scheme.settings.button.green }},{{ scheme.settings.button.blue }};
        --c-button-text: {{ scheme.settings.button_label.red }},{{ scheme.settings.button_label.green }},{{ scheme.settings.button_label.blue }};
        --c-alt-button: {{ scheme.settings.background.red }},{{ scheme.settings.background.green }},{{ scheme.settings.background.blue }};
        --c-alt-button-text: {{ scheme.settings.secondary_button_label.red }},{{ scheme.settings.secondary_button_label.green }},{{ scheme.settings.secondary_button_label.blue }};
        --c-link: {{ scheme.settings.secondary_button_label.red }},{{ scheme.settings.secondary_button_label.green }},{{ scheme.settings.secondary_button_label.blue }};
        --c-badge-foreground: {{ scheme.settings.text.red }},{{ scheme.settings.text.green }},{{ scheme.settings.text.blue }};
        --c-badge-background: {{ scheme.settings.background.red }},{{ scheme.settings.background.green }},{{ scheme.settings.background.blue }};
        --c-badge-border: {{ scheme.settings.text.red }},{{ scheme.settings.text.green }},{{ scheme.settings.text.blue }};
        --payment-terms-background-color: rgb({{ scheme.settings.background.rgb }});
        }
    {% endfor %}

    {{ scheme_classes | prepend: 'body' }} {
        color: rgba(var(--c-foreground), 0.75);
        background-color: rgb(var(--c-background));
    }

    :root {
    --f-body-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    --f-body-style: {{ settings.type_body_font.style }};
    --f-body-weight: {{ settings.type_body_font.weight }};
    --f-body-weight-bold: {{ settings.type_body_font.weight | plus: 300 | at_most: 1000 }};

    --f-heading-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    --f-heading-style: {{ settings.type_header_font.style }};
    --f-heading-weight: {{ settings.type_header_font.weight }};

    --f-body-scale: {{ settings.body_scale | divided_by: 100.0 }};
    --f-heading-scale: {{ settings.heading_scale | times: 1.0 | divided_by: settings.body_scale }};

    --me-padding: {{ settings.media_padding }}px;
    --me-border-opacity: {{ settings.media_border_opacity | divided_by: 100.0 }};
    --me-border-width: {{ settings.media_border_thickness }}px;
    --me-radius: {{ settings.media_radius }}px;
    --me-shadow-opacity: {{ settings.media_shadow_opacity | divided_by: 100.0 }};
    --me-shadow-horizontal-offset: {{ settings.media_shadow_horizontal_offset }}px;
    --me-shadow-vertical-offset: {{ settings.media_shadow_vertical_offset }}px;
    --me-shadow-blur-radius: {{ settings.media_shadow_blur }}px;
    --me-shadow-visible: {% if settings.media_shadow_opacity > 0 %}1{% else %}0{% endif %};

    --page-width: {{ settings.page_width | divided_by: 10 }}rem;
    --page-width-margin: {% if settings.page_width == '1600' %}2{% else %}0{% endif %}rem;

    --p-crd-image-padding: {{ settings.card_image_padding | divided_by: 10.0 }}rem;
    --p-crd-corner-radius: {{ settings.card_corner_radius | divided_by: 10.0 }}rem;
    --p-crd-text-alignment: {{ settings.card_text_alignment }};
    --p-crd-border-width: {{ settings.card_border_thickness | divided_by: 10.0 }}rem;
    --p-crd-border-opacity: {{ settings.card_border_opacity | divided_by: 100.0 }};
    --p-crd-shadow-opacity: {{ settings.card_shadow_opacity | divided_by: 100.0 }};
    --p-crd-shadow-visible: {% if settings.card_shadow_opacity > 0 %}1{% else %}0{% endif %};
    --p-crd-shadow-horizontal-offset: {{ settings.card_shadow_horizontal_offset | divided_by: 10.0 }}rem;
    --p-crd-shadow-vertical-offset: {{ settings.card_shadow_vertical_offset | divided_by: 10.0 }}rem;
    --p-crd-shadow-blur-radius: {{ settings.card_shadow_blur | divided_by: 10.0 }}rem;

    --c-crd-image-padding: {{ settings.collection_card_image_padding | divided_by: 10.0 }}rem;
    --c-crd-corner-radius: {{ settings.collection_card_corner_radius | divided_by: 10.0 }}rem;
    --c-crd-text-alignment: {{ settings.collection_card_text_alignment }};
    --c-crd-border-width: {{ settings.collection_card_border_thickness | divided_by: 10.0 }}rem;
    --c-crd-border-opacity: {{ settings.collection_card_border_opacity | divided_by: 100.0 }};
    --c-crd-shadow-opacity: {{ settings.collection_card_shadow_opacity | divided_by: 100.0 }};
    --c-crd-shadow-visible: {% if settings.collection_card_shadow_opacity > 0 %}1{% else %}0{% endif %};
    --c-crd-shadow-horizontal-offset: {{ settings.collection_card_shadow_horizontal_offset | divided_by: 10.0 }}rem;
    --c-crd-shadow-vertical-offset: {{ settings.collection_card_shadow_vertical_offset | divided_by: 10.0 }}rem;
    --c-crd-shadow-blur-radius: {{ settings.collection_card_shadow_blur | divided_by: 10.0 }}rem;

    --b-crd-image-padding: {{ settings.blog_card_image_padding | divided_by: 10.0 }}rem;
    --b-crd-corner-radius: {{ settings.blog_card_corner_radius | divided_by: 10.0 }}rem;
    --b-crd-text-alignment: {{ settings.blog_card_text_alignment }};
    --b-crd-border-width: {{ settings.blog_card_border_thickness | divided_by: 10.0 }}rem;
    --b-crd-border-opacity: {{ settings.blog_card_border_opacity | divided_by: 100.0 }};
    --b-crd-shadow-opacity: {{ settings.blog_card_shadow_opacity | divided_by: 100.0 }};
    --b-crd-shadow-visible: {% if settings.blog_card_shadow_opacity > 0 %}1{% else %}0{% endif %};
    --b-crd-shadow-horizontal-offset: {{ settings.blog_card_shadow_horizontal_offset | divided_by: 10.0 }}rem;
    --b-crd-shadow-vertical-offset: {{ settings.blog_card_shadow_vertical_offset | divided_by: 10.0 }}rem;
    --b-crd-shadow-blur-radius: {{ settings.blog_card_shadow_blur | divided_by: 10.0 }}rem;

    --badge-corner-radius: {{ settings.badge_corner_radius | divided_by: 10.0 }}rem;

    --pop-border-width: {{ settings.popup_border_thickness }}px;
    --pop-border-opacity: {{ settings.popup_border_opacity | divided_by: 100.0 }};
    --pop-corner-radius: {{ settings.popup_corner_radius }}px;
    --pop-shadow-opacity: {{ settings.popup_shadow_opacity | divided_by: 100.0 }};
    --pop-shadow-horizontal-offset: {{ settings.popup_shadow_horizontal_offset }}px;
    --pop-shadow-vertical-offset: {{ settings.popup_shadow_vertical_offset }}px;
    --pop-shadow-blur-radius: {{ settings.popup_shadow_blur }}px;

    --d-border-width: {{ settings.drawer_border_thickness }}px;
    --d-border-opacity: {{ settings.drawer_border_opacity | divided_by: 100.0 }};
    --d-shadow-opacity: {{ settings.drawer_shadow_opacity | divided_by: 100.0 }};
    --d-shadow-horizontal-offset: {{ settings.drawer_shadow_horizontal_offset }}px;
    --d-shadow-vertical-offset: {{ settings.drawer_shadow_vertical_offset }}px;
    --d-shadow-blur-radius: {{ settings.drawer_shadow_blur }}px;

    --spacing-desktop: {% render 'ax', value: settings.spacing_sections %};
    --spacing-mobile: {% render 'ax', value: settings.spacing_sections_mobile %};

    --y-spacing-desk: {{ settings.spacing_grid_vertical }}px;
    --x-spacing-desk: {{ settings.spacing_grid_horizontal }}px;
    --y-spacing-phone: {{ settings.spacing_grid_vertical | divided_by: 2 }}px;
    --x-spacing-phone: {{ settings.spacing_grid_horizontal | divided_by: 2 }}px;

    --tb-border-opacity: {{ settings.text_boxes_border_opacity | divided_by: 100.0 }};
    --tb-border-width: {{ settings.text_boxes_border_thickness }}px;
    --tb-radius: {{ settings.text_boxes_radius }}px;
    --tb-shadow-opacity: {{ settings.text_boxes_shadow_opacity | divided_by: 100.0 }};
    --tb-shadow-visible: {% if settings.text_boxes_shadow_opacity > 0 %}1{% else %}0{% endif %};
    --tb-shadow-horizontal-offset: {{ settings.text_boxes_shadow_horizontal_offset }}px;
    --tb-shadow-vertical-offset: {{ settings.text_boxes_shadow_vertical_offset }}px;
    --tb-shadow-blur-radius: {{ settings.text_boxes_shadow_blur }}px;

    --btn-radius: {{ settings.buttons_radius }}px;
    --btn-radius-outset: {% if settings.buttons_radius > 0 %}{{ settings.buttons_radius | plus: settings.buttons_border_thickness }}{% else %}0{% endif %}px;
    --btn-border-width: {% if settings.buttons_border_opacity > 0 %}{{ settings.buttons_border_thickness }}{% else %}0{% endif %}px;
    --btn-border-opacity: {{ settings.buttons_border_opacity | divided_by: 100.0 }};
    --btn-shadow-opacity: {{ settings.buttons_shadow_opacity | divided_by: 100.0 }};
    --btn-shadow-visible: {% if settings.buttons_shadow_opacity > 0 %}1{% else %}0{% endif %};
    --btn-shadow-horizontal-offset: {{ settings.buttons_shadow_horizontal_offset }}px;
    --btn-shadow-vertical-offset: {{ settings.buttons_shadow_vertical_offset }}px;
    --btn-shadow-blur-radius: {{ settings.buttons_shadow_blur }}px;
    --btn-border-offset: {% if settings.buttons_radius > 0 or settings.buttons_shadow_opacity > 0 %}0.3{% else %}0{% endif %}px;

    --i-radius: {{ settings.inputs_radius }}px;
    --i-border-width: {{ settings.inputs_border_thickness }}px;
    --i-border-opacity: {{ settings.inputs_border_opacity | divided_by: 100.0 }};
    --i-shadow-opacity: {{ settings.inputs_shadow_opacity | divided_by: 100.0 }};
    --i-shadow-horizontal-offset: {{ settings.inputs_shadow_horizontal_offset }}px;
    --i-margin-offset: {% if settings.inputs_shadow_vertical_offset != 0 and settings.inputs_shadow_opacity > 0 %}{{ settings.inputs_shadow_vertical_offset | abs }}{% else %}0{% endif %}px;
    --i-shadow-vertical-offset: {{ settings.inputs_shadow_vertical_offset }}px;
    --i-shadow-blur-radius: {{ settings.inputs_shadow_blur }}px;
    --i-radius-outset: {% if settings.inputs_radius > 0 %}{{ settings.inputs_radius | plus: settings.inputs_border_thickness }}{% else %}0{% endif %}px;

    --pills-radius: {{ settings.variant_pills_radius }}px;
    --pills-border-width: {{ settings.variant_pills_border_thickness }}px;
    --pills-border-opacity: {{ settings.variant_pills_border_opacity | divided_by: 100.0 }};
    --pills-shadow-opacity: {{ settings.variant_pills_shadow_opacity | divided_by: 100.0 }};
    --pills-shadow-horizontal-offset: {{ settings.variant_pills_shadow_horizontal_offset }}px;
    --pills-shadow-vertical-offset: {{ settings.variant_pills_shadow_vertical_offset }}px;
    --pills-shadow-blur-radius: {{ settings.variant_pills_shadow_blur }}px;
    }
{% endstyle %}
